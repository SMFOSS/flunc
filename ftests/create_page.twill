#
# adds a new page by creating a wicked link and following it 
# (destroys project home page body) 
# 
# $projname   - the project to add the page in 
# $pagename   - the page to add 
#


go ${base_url}/projects 
follow $projname 
follow "Edit"
fv edit_form text "((${pagename}))" 
submit form_submit
follow ${pagename}
find "\"${pagename}\" has been created"
find "Edit\s*Page" s
find ${pagename}
fv edit_form text "This is the new page $pagename."
submit form_submit 
find "Changes saved"
 
