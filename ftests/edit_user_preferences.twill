#
# edit user preferences 
#
# fullname - changes users full name to this  
# email - changes users email address to this 
# location - changes users location to this 
#
# expects: 
#   logged in as user 
#


go ${base_url}
follow "My Info"
find "Edit Personal Info and Preferences"
find $fullname
find $email
fv edit_form fullname "my fullname"
fv edit_form email "myemail@example.com"
fv edit_form location $location
submit form_submit
find "my fullname"
find "myemail@example.com"
find $location
fv edit_form fullname $fullname
fv edit_form email $email
submit form_submit
find $fullname
find $email
find $location
